<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bmob_reader_add_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context="com.bookmanager.eidian.bookmanager.Activities.BmobReaderAddBook">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:layout_scrollFlags="enterAlways|scroll"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_gravity="center_horizontal"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="提交的书籍信息"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_book_message"
        />
    <TableRow>
        <TextView
            android:text="书名 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:hint="输入书名"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/input_book_name_each"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="作者 : "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            />
        <EditText
            android:hint="输入作者"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/input_author_name_each"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="所有者 : "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:hint="输入书籍所有者姓名"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/book_owner_each"/>

    </TableRow>

    <TableRow>
        <TextView
            android:text="说明 : "
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <EditText
            android:hint="在这可以对书籍进行其他描述"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:lines="4"
            android:id="@+id/input_others_message_each"/>
    </TableRow>



    <Button
        android:text="提交"
        android:textSize="25dp"
        android:id="@+id/submit_book_each"/>

</TableLayout>
